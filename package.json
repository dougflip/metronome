{
  "name": "@dougflip/metronome",
  "version": "0.0.1",
  "description": "Headless metronome with events",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "check": "concurrently \"npm:lint\" \"npm:compile\" \"npm:format:check\" \"npm:check:exports\"",
    "check:exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "compile": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "lint": "oxlint ./src"
  },
  "keywords": [
    "audio",
    "metronome"
  ],
  "author": "dougflip",
  "license": "MIT",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "concurrently": "^9.1.2",
    "oxlint": "^0.16.4",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}
